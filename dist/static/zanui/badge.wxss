.zan-badge {
  position: relative;
}
.zan-badge__count {
  position: absolute;
  top: -5px;
  right: 1em;
  height: 1.6em;
  min-width: 1.6em;
  line-height: 1.6;
  padding: 0.1em;
  font-size: 10px;
  font-family: tahoma;
  border-radius: .8em;
  background: #FF4444;
  color: #fff;
  text-align: center;
  white-space: nowrap;
  transform: translateX(50%);
  transform-origin: -10% center;
  z-index: 10;
  box-shadow: 0 0 0 1px #fff;
  box-sizing: border-box;
}
